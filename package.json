{
  "name": "@johntalton/mcp23",
  "version": "5.0.0",
  "description": "",
  "author": "johntalton@gmail.com",
  "license": "MIT",
  "main": "lib/index.js",
  "type": "module",
  "exports": {
    ".": "./lib/index.js"
  },
  "files": [
    "lib/**/*.js",
    "lib/**/*.d.ts",
    "lib/**/*.d.ts.map",
    "lib/**/*.js.map"
  ],
  "scripts": {
    "test": "npm run test:mocha",
    "test:mocha": "mocha",
    "lint": "eslint --quiet  --ext .ts src/*.ts",
    "build": "tsc",
    "build:watch": "tsc --watch"
  },
  "mocha": {
    "spec": [
      "test/*.spec.js"
    ],
    "grep": "@broken|@slow",
    "invert": true,
    "parallel": true,
    "watch": false,
    "sort": false,
    "forbitOnly": true,
    "check-leaks": true,
    "global": []
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:promise/recommended",
      "plugin:import/recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "@johntalton/eslint-config/ts",
      "@johntalton/eslint-config/es"
    ],
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "env": {
      "es6": true,
      "browser": true
    },
    "rules": {
      "no-tabs": "off",
      "fp/no-class": "off",
      "class-methods-use-this": "warn",
      "max-len": [
        "warn",
        {
          "code": 120,
          "ignoreUrls": true,
          "tabWidth": 2
        }
      ],
      "spellcheck/spell-checker": [
        "error",
        {
          "identifiers": false,
          "minLength": 3,
          "skipWords": [
            "gpio", "gpios", "mcp23017", "iocon", "mcp23gpio", "mcp23",
            "iodir", "gpinten", "intcon", "defval"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "@johntalton/and-other-delights": "^7.0.0",
    "@johntalton/bitsmush": "^1.0.0"
  },
  "devDependencies": {
    "@johntalton/eslint-config": "github:johntalton/eslint-config",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "chai": "^5.1.0",
    "eslint": "^8.42.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-functional": "^6.0.0",
    "eslint-plugin-immutable": "^1.0.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-mocha": "^10.1.0",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-no-use-extend-native": "^0.5.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-security": "^3.0.0",
    "eslint-plugin-spellcheck": "0.0.20",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  }
}
